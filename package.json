    "changeset": "^0.2.6",
    "eslint": "^9.29.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.0"
  },
  "packageManager": "pnpm@10.7.0",
  "dependencies": {
    "@changesets/cli": "^2.29.4"
  }
}
